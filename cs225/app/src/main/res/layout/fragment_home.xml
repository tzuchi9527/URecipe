<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/step_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/expanded_calories"
            android:layout_width="match_parent"
            android:layout_below="@+id/step_count"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/cal_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expanded_calories"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/query_button_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cal_breakfast"
            android:text="Search" />

        <TextView
            android:id="@+id/result_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/query_button_breakfast"/>

        <EditText
            android:id="@+id/cal_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_breakfast"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/query_button_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cal_lunch"
            android:text="Search" />

        <TextView
            android:id="@+id/result_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/query_button_lunch"/>

        <EditText
            android:id="@+id/cal_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_lunch"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/query_button_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cal_dinner"
            android:text="Search" />

        <TextView
            android:id="@+id/result_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/query_button_dinner"/>

    </RelativeLayout>


</FrameLayout>